    <input type="text" id="datepicker" id="datepicker"><br>

    <label for="check_dest">Êtes-vous le destinataire de cette liste</label>
    <input type="checkbox" name="check_dest" id="check_dest" onclick="check()" ><br>

    <label for="nom_dest">nom du destinataire</label>
    <input type="text" name="nom_dest" id="nom_dest" value="nom"><br>

    <p type="button" class="button" name="validate" id="validate" value="Créer la liste">Créer la liste</p>
